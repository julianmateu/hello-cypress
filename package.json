{
  "name": "hello-node",
  "version": "1.0.0",
  "description": "Hello world application in NodeJS using Typescript and Jest with coverage using Dev containers",
  "main": "./src/app.ts",
  "repository": "github:julianmateu/hello-ts",
  "author": "Julian Mateu <julianmateu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node ./src/app.ts",
